doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{title} - Turbo Delegacja!
    link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
    script(src='/javascripts/modernizr-2.6.2.js')
  body
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          img(border='0', alt='Turbo Delegacja', src='/images/logo.png')
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href='/about') O nas
            li
              a(href='/contact') Kontakt
    .container.body-content
      block content
      hr
      footer
        p &copy; 2015 - #{year} Turbo Delegacja ver #{ver}

    script(src='/javascripts/jquery-1.10.2.js')
    script(src='/javascripts/bootstrap.js')
    script(src='/javascripts/respond.js')

    block scripts
